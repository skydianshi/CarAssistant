<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="0dp"
    android:fitsSystemWindows="true"
    android:background="#48D1CC"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#EAEAEA">


        <com.baidu.android.voicedemo.MyToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:titleTextColor="#000000"
            android:background="#48D1CC"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1">

                <FrameLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:background="@drawable/camposs_bg">
                    <com.skydianshi.obd.RoundProgressBar
                        android:id="@+id/speed_roundProgressBar1"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_gravity="center"

                        />
                    <com.skydianshi.obd.CompassView
                        android:id="@+id/speed_compass_pointer"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center"
                        android:src="@drawable/camposs_ori" />
                    <TextView
                        android:id="@+id/speedshow"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="13dp"
                        android:text="0km/h"
                        android:textColor="#00ffff"
                        />
                </FrameLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1">

                <FrameLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="right"
                    android:background="@drawable/rpmbackground">
                    <com.skydianshi.obd.RoundProgressBar
                        android:id="@+id/RPM_roundProgressBar1"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_gravity="center"

                        />
                    <com.skydianshi.obd.CompassView
                        android:id="@+id/RPM_compass_pointer"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center"
                        android:src="@drawable/camposs_ori" />
                    <TextView
                        android:id="@+id/RPM"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="13dp"
                        android:text="0rpm"
                        android:textColor="#00ffff"
                        />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="汽车速度"
                android:layout_weight="1"
                android:textColor="#EE0000"
                android:gravity="center"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="发动机转速"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="#EE0000" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1">

                <FrameLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:background="@drawable/mafbackground">
                    <com.skydianshi.obd.RoundProgressBar
                        android:id="@+id/MAFProgressBar"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_gravity="center"

                        />
                    <com.skydianshi.obd.CompassView
                        android:id="@+id/MAFCompassView"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center"
                        android:src="@drawable/camposs_ori" />
                    <TextView
                        android:id="@+id/airFlowTextView"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="13dp"
                        android:text="0g/s"
                        android:textColor="#00ffff"
                        />
                </FrameLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1">

                <FrameLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="right"
                    android:background="@drawable/camposs_bg">
                    <com.skydianshi.obd.RoundProgressBar
                        android:id="@+id/MAPProgressBar"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_gravity="center"

                        />
                    <com.skydianshi.obd.CompassView
                        android:id="@+id/MAPCompassView"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center"
                        android:src="@drawable/camposs_ori" />
                    <TextView
                        android:id="@+id/MAPTextView"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="13dp"
                        android:text="0kPa"
                        android:textColor="#00ffff"
                        />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="质量空气流量"
                android:layout_weight="1"
                android:textColor="#EE0000"
                android:gravity="center"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="进气歧管压力"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="#EE0000" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1">

                <FrameLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:background="@drawable/etcbackground">
                    <com.skydianshi.obd.RoundProgressBar
                        android:id="@+id/ECTProgressBar"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_gravity="center"

                        />
                    <com.skydianshi.obd.CompassView
                        android:id="@+id/ECTCompassView"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center"
                        android:src="@drawable/camposs_ori" />
                    <TextView
                        android:id="@+id/ECTTextView"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="13dp"
                        android:text="0℃"
                        android:textColor="#00ffff"
                        />
                </FrameLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1">

                <FrameLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="right"
                    android:background="@drawable/tpositionbackground">
                    <com.skydianshi.obd.RoundProgressBar
                        android:id="@+id/TPositionProgressBar"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_gravity="center"

                        />
                    <com.skydianshi.obd.CompassView
                        android:id="@+id/TPositionCompassView"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center"
                        android:src="@drawable/camposs_ori" />
                    <TextView
                        android:id="@+id/TPositionTextView"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="13dp"
                        android:text="0%"
                        android:textColor="#00ffff"
                        />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="发动机冷却液温度"
                android:layout_weight="1"
                android:textColor="#EE0000"
                android:gravity="center"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="节气门开度"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="#EE0000" />

        </LinearLayout>





<!--    <Button
            android:text="连接汽车"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/connectButton"
            android:gravity="center"
            android:textColor="#000000"
            android:background="#EAEAEA"
        />-->



    </LinearLayout>


</RelativeLayout>
